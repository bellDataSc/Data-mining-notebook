def parse_line_content(line_content):
    """
    Parses the middle content of a line to separate Description from Unit.
    Logic: Units are typically at the end of the string.
    """
    words = line_content.split()
    unit = "-"
    description = line_content

    if len(words) > 0:
        last_word = words[-1]
        second_last = words[-2] if len(words) > 1 else ""
        
        # Logic to catch specific units (e.g., 'MES R', 'H', 'KG')
        if second_last == "MES" and last_word == "R":
            unit = "MES R"
            description = " ".join(words[:-2])
        # Assumption: Units are usually short (<= 6 chars)
        elif len(last_word) <= 6: 
            unit = last_word
            description = " ".join(words[:-1])
            
    return description, unit
